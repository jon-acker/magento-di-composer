{
    "require": {
        "aydin-hassan/magento-core-composer-installer" : "~1.0",
        "magento-hackathon/magento-composer-installer": "*",
        "inviqa/magento-enterprise": "*",
        "inviqa/magento-symfony-container": "dev-master"
    },
    "require-dev": {
        "phpspec/phpspec": "2.2.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "": [
                "public/app/code/local",
                "public/app/code/community",
                "public/app/code/core",
                "public/app",
                "public/lib",
                "src"
            ],
            "Mage" : "public/app/code/core"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:Cotya/magento-composer-installer.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:AydinHassan/magento-community.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:inviqa/magento-enterprise.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:inviqa/magento-symfony-container.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:inviqa/symfony-container-generator.git"
        }
    ],
    "extra": {
        "magento-root-dir": "./public/"
    },
    "minimum-stability":"dev"
}
